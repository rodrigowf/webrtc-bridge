{
  "name": "vcode",
  "version": "0.1.0",
  "description": "Voice-controlled coding agent that handles complex code and terminal tasks through natural speech",
  "private": true,
  "type": "module",
  "bin": {
    "vcode": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p .",
    "start": "node dist/server.js",
    "dev": "npm run build && node dist/server.js",
    "test": "vitest run tests/health.test.ts tests/codex.service.test.ts tests/codex.sse.test.ts tests/claude.service.test.ts tests/claude.sse.test.ts",
    "test:unit": "vitest run tests/health.test.ts tests/codex.service.test.ts tests/codex.sse.test.ts tests/claude.service.test.ts tests/claude.sse.test.ts",
    "test:e2e": "playwright test tests/interactive.e2e.test.ts --headed",
    "test:e2e:debug": "playwright test tests/interactive.e2e.test.ts --headed --debug",
    "test:interactive": "npm run test:e2e"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.60",
    "@openai/codex-sdk": "^0.47.0",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "qrcode-terminal": "^0.12.0",
    "wrtc": "^0.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.4",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/supertest": "^6.0.3",
    "playwright": "^1.57.0",
    "supertest": "^7.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
